<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <fragment
        android:id="@+id/user_card"
        android:name="com.homesoftwaretools.toptalproperty.features.usercard.UserCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/user_card"
        />

    <fragment
        android:id="@+id/filter"
        android:name="com.homesoftwaretools.toptalproperty.features.filter.FilterScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/filter_screen"
        />

</LinearLayout>